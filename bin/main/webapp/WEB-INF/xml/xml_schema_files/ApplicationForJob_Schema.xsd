<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.example.org/photoBay"  elementFormDefault="qualified" xmlns:appjob="http://www.example.org/photoBay">
<xs:element name="applicationForJob">       
        <xs:complexType>
			<xs:all maxOccurs="1" minOccurs="1">
				<xs:element name="description" type="xs:string"></xs:element>
				<xs:element name="images">
					<xs:complexType>
						<xs:sequence>
						<!-- type sollte "img" sein, momentan ist aber "string"... -->
							<xs:element name="image" type="xs:string" maxOccurs="unbounded"/>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
			</xs:all> 
			<xs:attribute name="photographerID" type="xs:int" use="required"></xs:attribute>
			<xs:attribute name="jobID" type="xs:int" use="required"></xs:attribute>
	</xs:complexType>
    </xs:element>
</xs:schema>